<atlassian-plugin name='View Project Operations Sections' key='jira.webfragments.view.project.operations' i18n-name-key="webfragments.view.project.operations.plugin.name" system='true'>
    <plugin-info>
        <description key="webfragments.view.project.operations.plugin.desc">This library includes the web fragments for the project operation links on the 'view project' page</description>
        <vendor name="Atlassian" url="http://www.atlassian.com"/>
        <application-version min="3.7" max="3.7"/>
        <version>1.0</version>
    </plugin-info>

    <web-item key="browse_project" name="Browse Project" section="system.view.project.operations" i18n-name-key="webfragments.view.project.operations.item.browse.project.name" system="true" weight="10">
        <label key="browseproject.title" />
        <link linkId="browse_project">/browse/$textutils.htmlEncode($velocityhelper.urlencode($helper.project.key))</link>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.HasSelectedProjectCondition" />
    </web-item>

    <web-item key="edit_project" name="Edit Project" section="system.view.project.operations" i18n-name-key="webfragments.view.project.operations.item.edit.project.name" system="true" weight="20">
        <label key="admin.projects.edit.project" />
        <link linkId="edit_project">/secure/project/EditProject!default.jspa?pid=$helper.project.id</link>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.HasSelectedProjectCondition" />
        <conditions type="OR">
            <condition class="com.atlassian.jira.plugin.webfragment.conditions.UserIsAdminCondition" />
            <condition class="com.atlassian.jira.plugin.webfragment.conditions.HasProjectPermissionCondition">
                <param name="permission">project</param>
            </condition>
        </conditions>
    </web-item>

    <web-item key="delete_project" name="Delete Project" section="system.view.project.operations" i18n-name-key="webfragments.view.project.operations.item.delete.project.name" system="true" weight="30">
        <label key="admin.projects.delete.project" />
        <link linkId="delete_project">/secure/admin/DeleteProject!default.jspa?pid=$helper.project.id</link>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.HasSelectedProjectCondition" />
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.UserIsAdminCondition" />
    </web-item>

</atlassian-plugin>