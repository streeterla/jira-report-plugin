#if ($requestContext.getRequestParameter('focusedCommentId') && "$action.comment.id" == $requestContext.getRequestParameter('focusedCommentId'))
    #set ($focusedComment = " focused")
#end
<div id="comment-${action.comment.id}" class="issue-data-block activity-comment twixi-block expanded">
    <div class="twixi-wrap verbose actionContainer$!focusedComment">
        <a href="#" class="twixi"><span class="icon twixi-opened"><span>$i18n.getText("admin.common.words.hide")</span></span></a>
        <div class="action-links">
            <a href="${req.contextPath}/browse/${action.issue.key}?focusedCommentId=${action.comment.id}&page=com.atlassian.jira.plugin.system.issuetabpanels%3Acomment-tabpanel#action_${action.comment.id}" title="$i18n.getText('viewissue.permlink.title')" class="icon icon-perma"><span>$i18n.getText('viewissue.permlink')</span></a>
            #if ($action.canEditComment)
                <a id="edit_comment_${action.comment.id}" href="${req.contextPath}/secure/EditComment!default.jspa?id=${action.issue.id}&commentId=${action.comment.id}" title="$i18n.getText('common.words.edit')" class="icon icon-edit-sml"><span>$i18n.getText('common.words.edit')</span></a>
            #end
            #if ($action.canDeleteComment)
                <a id="delete_comment_${action.comment.id}" href="${req.contextPath}/secure/DeleteComment!default.jspa?id=${action.issue.id}&commentId=${action.comment.id}" title="$i18n.getText('common.words.delete')" class="icon icon-delete"><span>$i18n.getText('common.words.delete')</span></a>
            #end
        </div>
        <div class="action-details">#actionDetailsBody($action.comment $i18n $outlookdate)</div>
        <div class="action-body flooded">#if($renderedContent)$renderedContent #else #makelinkedhtml ( $action.comment ) #end</div>
    </div>
    <div class="twixi-wrap concise actionContainer$!focusedComment">
        <a href="#" class="twixi"><span class="icon twixi-closed"><span>$i18n.getText("admin.common.words.show")</span></span></a>
        <div class="action-details flooded">
            #actionDetailsBody($action.comment $i18n $outlookdate)
            #if($renderedContent) $velocityhelper.removeHtmlBreaks($renderedContent) #else $velocityhelper.removeHtmlBreaks($action.comment) #end
        </div>
    </div>
</div>